NAME = combat
OBJECTS = objects/main.o objects/HumanA.o objects/HumanB.o objects/Weapon.o

CC = c++
CFLAGS = -Wall -Wextra -Werror -std=c++98
OBJ_DIR = objects

all: $(NAME)

$(NAME): $(OBJECTS)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJECTS)

$(OBJECTS): | $(OBJ_DIR)

$(OBJ_DIR):
	mkdir -p $(OBJ_DIR)


objects/main.o: main.cpp
	$(CC) $(CFLAGS) -c main.cpp -o objects/main.o

objects/HumanA.o: HumanA.cpp
	$(CC) $(CFLAGS) -c HumanA.cpp -o objects/HumanA.o

objects/HumanB.o: HumanB.cpp
	$(CC) $(CFLAGS) -c HumanB.cpp -o objects/HumanB.o

objects/Weapon.o: Weapon.cpp
	$(CC) $(CFLAGS) -c Weapon.cpp -o objects/Weapon.o

clean:
	rm -rf $(OBJ_DIR)

fclean: clean
	rm -f $(NAME)

run: all
	./$(NAME)

val: all
	valgrind --leak-check=full --show-leak-kinds=all --track-origins=yes ./$(NAME)

re: fclean all