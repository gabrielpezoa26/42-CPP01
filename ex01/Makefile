NAME = zombieHorde
OBJECTS = objects/main.o objects/Zombie.o objects/zombieHorde.o

CC = c++
CFLAGS = -Wall -Wextra -Werror -std=c++98
OBJ_DIR = objects

all: $(NAME)

$(NAME): $(OBJECTS)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJECTS)

$(OBJECTS): | $(OBJ_DIR)

$(OBJ_DIR):
	mkdir -p $(OBJ_DIR)


objects/main.o: main.cpp
	$(CC) $(CFLAGS) -c main.cpp -o objects/main.o

objects/Zombie.o: Zombie.cpp
	$(CC) $(CFLAGS) -c Zombie.cpp -o objects/Zombie.o

objects/zombieHorde.o: zombieHorde.cpp
	$(CC) $(CFLAGS) -c zombieHorde.cpp -o objects/zombieHorde.o



clean:
	rm -rf $(OBJ_DIR)

fclean: clean
	rm -f $(NAME)

run: all
	./$(NAME)

val: all
	valgrind --leak-check=full --show-leak-kinds=all --track-origins=yes ./$(NAME)

re: fclean all